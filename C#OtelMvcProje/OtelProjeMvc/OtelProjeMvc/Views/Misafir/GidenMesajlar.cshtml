@using OtelProjeMvc.Models.Entity
@model List<TblMesaj2>
@{
    ViewBag.Title = "GidenMesajlar";
    Layout = "~/Views/Shared/_MisafirrLayout.cshtml";
}
<br />
<h2>GidenMesajlar</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>Alıcı</th>
        <th>Konu</th>
        <th>Tarih</th>
        <th>Mesajı Aç</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Alıcı</td>
            <td>@x.Konu</td>
            <td>@(((DateTime)x.Tarih).ToString("dd-MMM-yyyy"))</td>
            <td><a href="/Misafir/MesajDetaylar/@x.MesajID" class="btn btn-info">Mesajı Aç</a></td>
        </tr>
    }
</table>
<a href="/Misafir/YeniMesaj/" class="btn btn-success">Yeni Mesaj</a>